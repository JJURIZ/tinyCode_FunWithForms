extends layout

block content

  h1 Employer Details

  p #[strong Employer:] #{employer.employer_name}
  p #[strong Phone:] #{employer.employer_phone}
  p #[strong Street Address:] #{employer.employer_address1}
  p #[strong City:] #{employer.employer_city}
  p #[strong State:] #{employer.employer_state}
  p #[strong Zip:] #{employer.employer_zip}

  div(style='margin-left:20px;margin-top20px')

    h4 Associated Patients

    dl
    each patient in employer_patient
      dt
        a(href=patient.url) #{patient.pat_firstName} #{patient.pat_lastName}
    else
      p #{employer.employer_name} has no associated patients.
  
  hr
  p
    a(href=employer.url+'/delete') Delete Employer